<script>
    function ShowMessage() {
        var result = confirm("Bạn có muốn lưu thông tin");
        if (result) {
            return true;
        } else {
            return false;
        }
    }


    $(document).ready(function () {
        $('.panel-body form').on('submit', function (event) {
            event.preventDefault();
            const maintitle = ($('#maintitle').val());
            const maindescription = ($('.maindescription').val());
            const title1 = ($('#title1').val());
            const title2 = ($('#title2').val());
            const title3 = ($('#title3').val());
            const title4 = ($('#title4').val());
            var des1 = document.getElementsByName("des1")[0].value;
            var des2 = document.getElementsByName("des2")[1].value;
            var des3 = document.getElementsByName("des3")[2].value;
            var des4 = document.getElementsByName("des4")[3].value;

            //
            const data = {
                MainTitle: maintitle,
                MainDescription: maindescription,
                Title1: title1,
                Title2: title2,
                Title3: title3,
                Title4: title4,
                Description1: des1,
                Description2: des2,
                Description3: des3,
                Description4: des4,
            };

            if (maintitle != "" && maindescription != "" && title1 != "" && title2 != "" && title3 != "" && title4 != "" && des1 != "" && des2 != "" && des3 != "" && des4 != "") {
                $.ajax({
                    async: true,
                    data: JSON.stringify(data),
                    type: 'POST',
                    url: '/differencemaster/edit',
                    dataType: "json",
                    contentType: "application/json",
                    cache: false,
                    error: function (data) {
                        alert(data.Message);
                    },
                    success: function (data) {
                        alert(data.Message);
                        Window.location.href = "/differencemaster/edit"
                    }
                });
            }
        })
    })

</script>
