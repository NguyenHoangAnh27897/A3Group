@using PagedList.Mvc;
@using GridMvc.Html;
@model PagedList.IPagedList<A3Group.Models.A3Group_Member>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
    int i = 1;
}

<!-- Page Inner -->
<div class="page-inner">
    <div class="page-title">
        <h3 class="breadcrumb-header">Quản lý Thành viên A3 GROUP</h3>
    </div>
    <div id="main-wrapper">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-white">
                    <div class="panel-heading clearfix">
                        <h4 class="panel-title">Danh sách Thành viên A3 GROUP</h4>
                    </div>
                    <div class="panel-body">
                        <a href="/membermaster/create" class="btn btn-success m-b-sm">Thêm mới</a>
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Họ tên</th>
                                        <th>Chúc vụ</th>
                                        <th>Mô tả</th>
                                        <th>Hình ảnh</th>
                                        <th>Chỉnh sửa</th>
                                        <th>Xóa</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th scope="row">@i</th>
                                            <td>@item.Name</td>
                                            <td>@item.Role</td>
                                            @if (item.Description.Count() > 50)
                                            {
                                                <td>@item.Description.Substring(0, 50)</td>
                                            }
                                            else
                                            {
                                                <td>@item.Description</td>
                                            }
                                            <td>@item.Image</td>
                                            <td><a href="#" class="btn btn-success">Chỉnh sửa</a></td>
                                            <td><a href="#" class="btn btn-danger">Xóa</a></td>
                                        </tr>
                                        i++;
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- Row -->
    </div><!-- Main Wrapper -->
    </div>
