<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Responsive Admin Dashboard Template">
    <meta name="keywords" content="admin,dashboard">
    <meta name="author" content="stacks">
    <link rel="shortcut icon" href="~/Content/A3G/images/fav.png" />
    <!-- The above 6 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <!-- Title -->
    <title>A3 Group - Đăng nhập</title>

    <!-- Styles -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" rel="stylesheet">
    <link href="~/Content/WebMaster/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/WebMaster/assets/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/WebMaster/assets/plugins/icomoon/style.css" rel="stylesheet">
    <link href="~/Content/WebMaster/assets/plugins/waves/waves.min.css" rel="stylesheet">
    <link href="~/Content/WebMaster/assets/plugins/uniform/css/default.css" rel="stylesheet">

    <!-- Theme Styles -->
    <link href="~/Content/WebMaster/assets/css/metrotheme.min.css" rel="stylesheet">
    <link href="~/Content/WebMaster/assets/css/custom.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>

    <!-- Page Container -->
    <div class="page-container login-page">

        <!-- Page Content -->
        <div class="page-content">

            <!-- Page Inner -->
            <div class="page-inner">
                <div id="main-wrapper">
                    <div class="row">
                        <div class="col-md-3 col-login-box-alt">
                            <div class="panel panel-white login-box">
                                <div class="panel-body">
                                    <a href="@Url.Action("Index","Home")" class="logo-name">A3 Gorup</a>
                                    <p class="m-t-md">Xin hãy đăng nhập để vào phần quản lí</p>
                                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "m-t-md", role = "form" }))
                                    {
                                        @Html.AntiForgeryToken()
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" , placeholder = "Email" })
                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Mật khẩu" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    </div>
                                        <button type="submit" class="btn btn-success btn-block">Đăng nhập</button>
                                        @*<a href="/account/register" class="btn btn-default btn-block metro-reg-button">Create an account</a>*@
                                        <a href="#" class="display-block text-muted">Forgot Password?</a>
                                    }
                                        <p class="text-center m-t-xs text-sm login-footer">2018 &copy; A3 Group</p>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div><!-- Main Wrapper -->
            </div><!-- /Page Inner -->
        </div><!-- /Page Content -->
    </div><!-- /Page Container -->
    <!-- Javascripts -->
    <script src="~/Content/WebMaster/assets/plugins/jquery/jquery-3.1.0.min.js"></script>
    <script src="~/Content/WebMaster/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/WebMaster/assets/plugins/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/Content/WebMaster/assets/plugins/waves/waves.min.js"></script>
    <script src="~/Content/WebMaster/assets/plugins/uniform/js/jquery.uniform.standalone.js"></script>
    <script src="~/Content/WebMaster/assets/js/metrotheme.min.js"></script>
</body>
</html>