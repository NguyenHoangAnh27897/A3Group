@model A3Group.Models.A3Group_Differences
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<link href="~/Content/Webmaster/assets/plugins/plupload/js/jquery.plupload.queue/css/jquery.plupload.queue.css" rel="stylesheet" type="text/css" />
<div class="page-inner">
    <div class="page-title">
        <h3 class="breadcrumb-header">Quản lý Khác biệt</h3>
    </div>
    <div id="main-wrapper">
        <div class="row">
            <div class="panel panel-white">
                <div class="panel-heading clearfix">
                    <h3>Chỉnh sửa Khác biệt</h3>
                    <hr />
                </div>
                <div class="panel-body">
                    <form class="form-horizontal">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="panel-title">Tiêu đề (VUI LÒNG NHẬP DƯỚI 50 KÍ TỰ)</label>
                                    <input type="text" class="form-control" name="maintitle" id="maintitle" value="@Model.MainTitle" maxlength="50">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="panel-title">Phần in đậm (VUI LÒNG NHẬP DƯỚI 30 KÍ TỰ)</label>
                                    <input type="text" class="form-control" name="bold" id="bold" value="@Model.BoldText" maxlength="30">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="panel-title">Mô tả (VUI LÒNG NHẬP DƯỚI 500 KÍ TỰ)</label>
                            <textarea maxlength="500" rows="20" cols="50" style="height: 200px" type="text" name="maindes" id="maindes" class="form-control" placeholder="">@Model.MainDescription</textarea>
                        </div>

                        <hr />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="panel-title">Tiêu đề nhỏ 1 (VUI LÒNG NHẬP DƯỚI 50 KÍ TỰ)</label>
                                    <input maxlength="350" type="text" class="form-control" name="title1" id="title1" value="@Model.SubTitle1">
                                </div>

                                <div class="form-group">
                                    <label class="panel-title">Mô tả nhỏ 1 (VUI LÒNG NHẬP DƯỚI 500 KÍ TỰ)</label>
                                    <textarea maxlength="500" rows="20" cols="50" style="height: 200px" type="text" name="des1" id="des1" class="form-control" placeholder="">@Model.SubDescription1</textarea>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="panel panel-white">
                                    <div class="panel-heading clearfix">
                                        <h4 class="panel-title">Hình ảnh 1 (VUI LÒNG ĐĂNG HÌNH VỚI KÍCH THƯỚC)</h4>
                                    </div>
                                    <div class="panel-body">
                                        <div id="uploader">
                                            <p>Your browser doesn't have Flash, Silverlight or HTML5 support.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="panel-title">Tiêu đề nhỏ 2 (VUI LÒNG NHẬP DƯỚI 50 KÍ TỰ)</label>
                                    <input maxlength="350" type="text" class="form-control" name="title2" id="title2" value="@Model.SubTitle2">
                                </div>

                                <div class="form-group">
                                    <label class="panel-title">Mô tả nhỏ 2 (VUI LÒNG NHẬP DƯỚI 500 KÍ TỰ)</label>
                                    <textarea maxlength="500" rows="20" cols="50" style="height: 200px" type="text" name="des2" id="des2" class="form-control" placeholder="">@Model.SubDescription2</textarea>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="panel panel-white">
                                    <div class="panel-heading clearfix">
                                        <h4 class="panel-title">Hình ảnh 2 (VUI LÒNG ĐĂNG HÌNH VỚI KÍCH THƯỚC)</h4>
                                    </div>
                                    <div class="panel-body">
                                        <div id="uploader">
                                            <p>Your browser doesn't have Flash, Silverlight or HTML5 support.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="panel-title">Tiêu đề nhỏ 3 (VUI LÒNG NHẬP DƯỚI 50 KÍ TỰ)</label>
                                    <input maxlength="350" type="text" class="form-control" name="title3" id="title3" value="@Model.SubTitle3">
                                </div>

                                <div class="form-group">
                                    <label class="panel-title">Mô tả nhỏ 3 (VUI LÒNG NHẬP DƯỚI 500 KÍ TỰ)</label>
                                    <textarea maxlength="500" rows="20" cols="50" style="height: 200px" type="text" id="des3" name="des3" class="form-control" placeholder="">@Model.SubDescription3</textarea>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="panel panel-white">
                                    <div class="panel-heading clearfix">
                                        <h4 class="panel-title">Hình ảnh 3 (VUI LÒNG ĐĂNG HÌNH VỚI KÍCH THƯỚC)</h4>
                                    </div>
                                    <div class="panel-body">
                                        <div id="uploader">
                                            <p>Your browser doesn't have Flash, Silverlight or HTML5 support.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="panel-title">Tiêu đề nhỏ 4 (VUI LÒNG NHẬP DƯỚI 50 KÍ TỰ)</label>
                                    <input maxlength="350" type="text" class="form-control" name="title4" id="title4" value="@Model.SubTitle4">
                                </div>

                                <div class="form-group">
                                    <label class="panel-title">Mô tả nhỏ 4 (VUI LÒNG NHẬP DƯỚI 500 KÍ TỰ)</label>
                                    <textarea maxlength="500" rows="20" cols="50" style="height: 200px" type="text" name="des4" id="des4" class="form-control" placeholder="">@Model.SubDescription4</textarea>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="panel panel-white">
                                    <div class="panel-heading clearfix">
                                        <h4 class="panel-title">Hình ảnh 4 (VUI LÒNG ĐĂNG HÌNH VỚI KÍCH THƯỚC)</h4>
                                    </div>
                                    <div class="panel-body">
                                        <div id="uploader">
                                            <p>Your browser doesn't have Flash, Silverlight or HTML5 support.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-info btn-adon m-b-xxs" onclick="javascript: return ShowMessage();">LƯU</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Content/Webmaster/assets/js/ckeditor/ckeditor.js"></script>
<script src="~/Content/Webmaster/assets/js/ckeditor/samples/js/sample.js"></script>
<script>
    CKEDITOR.replace('des1');
    CKEDITOR.replace('des2');
    CKEDITOR.replace('des3');
    CKEDITOR.replace('des4');
</script>

<script>
    function ShowMessage() {
        var result = confirm("Bạn có muốn lưu thông tin");
        if (result) {
            return true;
        } else {
            return false;
        }
    }


    $(document).ready(function () {
        $('.panel-body form').on('submit', function (event) {
            event.preventDefault();
            const maintitle = ($('#maintitle').val());
            const maindes = ($('#maindes').val());
            const title1 = ($('#title1').val());
            var des1 = document.getElementsByName("des1")[0].value;
            const title2 = ($('#title2').val());
            var des2 = document.getElementsByName("des2")[0].value;
            const title3 = ($('#title3').val());
            var des3 = document.getElementsByName("des3")[0].value;
            const title4 = ($('#title4').val());
            var des4 = document.getElementsByName("des4")[0].value;
            const bold = ($('#bold').val());
            //
            const data = {
                MainTitle: maintitle,
                MainDescription: maindes,
                SubTitle1: title1,
                SubDescription1: des1,
                SubTitle2: title2,
                SubDescription2: des2,
                SubTitle3: title3,
                SubDescription3: des3,
                SubTitle4: title4,
                SubDescription4: des4,
                BoldText: bold
            };

            if (maintitle != '' && maindes != '' && title1 != '' && title2 != '' && title3 != '' && title4 != '' && des1 != '' && des2 != '' && des3 != '' && des4 != ''){
                $.ajax({
                    async: true,
                    data: JSON.stringify(data),
                    type: 'POST',
                    url: '/DifferenceMaster/edit',
                    dataType: "json",
                    contentType: "application/json",
                    cache: false,
                    error: function (data) {
                        alert(data.Message);
                    },
                    success: function (data) {
                        alert(data.Message);
                        Window.location.href = "/DifferenceMaster/edit"
                    }
                });
            }
        })
    })

</script>
