@model A3Group.Models.A3Group_Services
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<style>
    .col-md-3{
        margin-right: 50px;
    }
</style>
<div class="page-inner">
    <div class="page-title">
        <h3 class="breadcrumb-header">Quản lý Dịch vụ</h3>
    </div>
    <div id="main-wrapper">
        <div class="row">
            <div class="panel panel-white">
                <div class="panel-heading clearfix">
                    <h3>Chỉnh sửa Dịch vụ</h3>
                    <hr />
                </div>
                <div class="panel-body">
                    <form class="form-horizontal" action="/servicemaster/edit" method="post">
                        <div class="form-group">
                            <label class="panel-title">Tiêu đề (VUI LÒNG NHẬP DƯỚI 50 KÍ TỰ)</label>
                            <input type="text" class="form-control" name="maintitle" value="@Model.MainTitle" maxlength="50">
                        </div>
                        <div class="form-group">
                            <label class="panel-title">Mô tả (VUI LÒNG NHẬP DƯỚI 500 KÍ TỰ)</label>
                            <textarea maxlength="500" rows="20" cols="50" style="height: 200px" type="text" name="maindes" class="form-control" placeholder="">@Model.MainDescription</textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="panel-title">Tiêu đề nhỏ 1 (VUI LÒNG NHẬP DƯỚI 30 KÍ TỰ)</label>
                                    <input maxlength="30" type="text" class="form-control" name="title1" value="@Model.SubTitle1">
                                </div>

                                <div class="form-group">
                                    <label class="panel-title">Mô tả nhỏ 1 (VUI LÒNG NHẬP DƯỚI 200 KÍ TỰ)</label>
                                    <textarea maxlength="200" rows="20" cols="50" style="height: 200px" type="text" name="des1" class="form-control" placeholder="">@Model.SubDescription1</textarea>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="panel-title">Tiêu đề nhỏ 2 (VUI LÒNG NHẬP DƯỚI 30 KÍ TỰ)</label>
                                    <input maxlength="30" type="text" class="form-control" name="title2" value="@Model.SubTitle2">
                                </div>
 
                                <div class="form-group">
                                    <label class="panel-title">Mô tả nhỏ 2 (VUI LÒNG NHẬP DƯỚI 200 KÍ TỰ)</label>
                                    <textarea maxlength="200" rows="20" cols="50" style="height: 200px" type="text" name="des2" class="form-control" placeholder="">@Model.SubDescription2</textarea>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="panel-title">Tiêu đề nhỏ 3 (VUI LÒNG NHẬP DƯỚI 30 KÍ TỰ)</label>
                                    <input maxlength="30" type="text" class="form-control" name="title3" value="@Model.SubTitle3">
                                </div>

                                <div class="form-group">
                                    <label class="panel-title">Mô tả nhỏ 3 (VUI LÒNG NHẬP DƯỚI 500 KÍ TỰ)</label>
                                    <textarea maxlength="500" rows="20" cols="50" style="height: 200px" type="text" name="des3" class="form-control" placeholder="">@Model.SubDescription3</textarea>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="panel-title">Tiêu đề nhỏ 4 (VUI LÒNG NHẬP DƯỚI 30 KÍ TỰ)</label>
                                    <input maxlength="30" type="text" class="form-control" name="title4" value="@Model.SubTitle4">
                                </div>

                                <div class="form-group">
                                    <label class="panel-title">Mô tả nhỏ 4 (VUI LÒNG NHẬP DƯỚI 200 KÍ TỰ)</label>
                                    <textarea maxlength="200" rows="20" cols="50" style="height: 200px" type="text" name="des4" class="form-control" placeholder="">@Model.SubDescription4</textarea>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="panel-title">Tiêu đề nhỏ 5 (VUI LÒNG NHẬP DƯỚI 30 KÍ TỰ)</label>
                                    <input maxlength="30" type="text" class="form-control" name="title5" value="@Model.SubTitle5">
                                </div>

                                <div class="form-group">
                                    <label class="panel-title">Mô tả nhỏ 5 (VUI LÒNG NHẬP DƯỚI 200 KÍ TỰ)</label>
                                    <textarea maxlength="200" rows="20" cols="50" style="height: 200px" type="text" name="des5" class="form-control" placeholder="">@Model.SubDescription5</textarea>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="panel-title">Tiêu đề nhỏ 6 (VUI LÒNG NHẬP DƯỚI 30 KÍ TỰ)</label>
                                    <input maxlength="30" type="text" class="form-control" name="title6" value="@Model.SubTitle6">
                                </div>

                                <div class="form-group">
                                    <label class="panel-title">Mô tả nhỏ 6 (VUI LÒNG NHẬP DƯỚI 500 KÍ TỰ)</label>
                                    <textarea maxlength="500" rows="20" cols="50" style="height: 200px" type="text" name="des6" class="form-control" placeholder="">@Model.SubDescription6</textarea>
                                </div>
                            </div>

                        </div>
                        <button type="submit" class="btn btn-info btn-adon m-b-xxs">LƯU</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

